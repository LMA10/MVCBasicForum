@{ 
    //Recibe lista de categorias del initializeCategories del HomeController
    List<Categoria> categorias = ViewBag.listaCategorias;
}

<div class="card">
    <div class="card-header">
        <b>Todas las categorias</b>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var categoria in categorias.OrderBy(a => a.Nombre))
        {
            <li class="list-group-item list-group-item-action">
                <a asp-controller="Home" asp-action="ShowEntriesByCategory" asp-route-Nombre="@categoria.Nombre">
                    @Html.DisplayFor(ModelItem => categoria.Nombre)
                </a>
            </li>
        }
    </ul>
</div>