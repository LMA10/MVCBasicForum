@model BENT1C.Grupo4.Models.Miembro

@{
    ViewData["Title"] = "Create";
}

<div id="centerForm">
    <div class="row">
        <div class="col-lg-offset-4 col-md-4">
            <div class="card">
                <div class="card-header">
                    <div class="card-title text-center"><b>¿Eres nuevo?</b> - Registrate aqui mismo!</div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Miembros">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-key" aria-hidden="true"></i>
                            <label asp-for="Password" class="control-label"></label>
                            <input name="pass" type="password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Registrar" class="btn btn-primary col-md-12" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@if (User.IsInRole(nameof(Rol.Administrador)))
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
